{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": [
      "error",
      "windows"
    ]
  },
  "settings": {
    "import/resolver": {
      "alias": [
        ["@modules", "./src/modules"],
        ["@data", "./src/data"]
      ]
    }
  }
}